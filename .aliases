alias p="cd ~/project"
alias g="git"


alias ls="ls -G"
alias ll="ls -lhAG"
alias grep="grep --color=auto"
alias path='echo -e ${PATH//:/\\n}'
alias mv="mv -i"
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias d=docker
alias dc=docker-compose


update-ctags() {
  tmp_file='tmp_tags'
  ((ctags -f $tmp_file -R common infrastructure map pnc >/dev/null 2>&1) && (mv $tmp_file tags)) &
}
